<h1>giftcards</h1>
<div class="row">
    {{#each giftcards}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <!--
                    h5>{{title}}</h5>
                    <p>{{body}}</p>
                    <br>
                -->
                <h7>{{giftID}}</h7>
                <p>$ {{value}}</p>
                <p>{{formatDate createdAt 'MMMM Do YYYY'}}</p>
                <br>
                <div class="chip">
                    <a href="/giftcards/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
        </div>
        <br>
        <div class="card-action center-align">
            <a href="/giftcards/{{_id}}" class="btn grey">Read More</a>
        </div>
        <br><br>
    </div>
    {{else}}
    <p>No Stories to Display</p>
    {{/each}}
</div>